.blog-page
  .posts-main
    //max-width: 960px
    //margin: 0 auto
    .posts-slider
      width: 100%
      display: flex
      flex-flow: row wrap
  .post_item
    display: block
    width: 100%
    &__details
      //padding: 0 20px
    .post_bg
        height: 100%
        background-size: cover
        background-repeat: no-repeat
        background-position: 50%
    &.post-large
      height: 375px
      margin-bottom: 26px
      @media $mobile
        margin-bottom: 0
      &:hover
        .post_item__inner
          &:after
            background: rgba(0,79,255,.7)
      .post_details__title
        margin-bottom: 10px
    &.post-small
      width: calc(50% - 13px)
      height: 243px
      margin-bottom: 26px
      overflow: hidden
      @media $mobile
        height: 375px
      .post_details__title
        margin-bottom: 5px
      .post_item__inner
        &:after
          bottom: 0
          left: 0
          right: 0
          background : $color-accent
          transition: .5s
          transform translateY(100%)
      &:hover
        .post_item__inner
          &:after
            transform: translateY(0)
      &:nth-child(2n + 1)
        margin-left: 26px

      &:nth-last-child(1)
        margin-bottom: 0

      &:nth-last-child(2)
        margin-bottom: 0
    &__inner
      position: relative
      width: 100%
      height: 100%
      &:after
        content: ''
        position absolute
        top: 0
        left: 0
        right: 0
        bottom: 0
        z-index: 7
        background: transparent
        transition: background .5s ease
    .post_bg
      position: relative
    .post_details
      position: absolute
      left: 0
      right: 0
      bottom: 0
      z-index: 15
      padding: 32px 24px 20px 32px
      .excerpt
        font-family: $font-light
        color: $color-white
        font-size: 15px
        line-height: 24px
        letter-spacing: 0.32px
        padding-bottom: 24px
        max-width: 500px
      .date
        font-family: $font-light
        text-transform: uppercase
        color: $color-white
        font-size: 15px
        line-height: 28px
        letter-spacing: 0.32px
        margin-left: auto
        white-space: nowrap
      &__info
        display: flex
        align-items: flex-end



